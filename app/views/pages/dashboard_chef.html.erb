<div class="profile">
  <div class="">
   <%= cl_image_tag current_chef.photo, height: 250, width: 250, crop: :fill, class: "profile-photo"%>
   <h2><%= current_chef.name %> </h2>
    <%= link_to 'edit', edit_chef_registration_path, class: "btn btn-primary dash" %>


   </div>
  </div>

<h1>Pending Requests</h1>

<ul>
  <% @requests.each do |request| %>
  <li>
    <p><%= request.id %> - <%= request.restaurant.name %> wants you on <%= request.date %>, from<%= request.start_hours %> to <%= request.end_hours %> and will pay you <%= request.cost[current_chef.id] %></p>
    <% if request.status == "complete" %>
      <p>this request has been completed</p>
    <% else %>
      <%= link_to 'Accept', request_path(request), method: :delete %>
      <%= link_to 'Decline', request_path(request), method: :patch %>
      <%= link_to "Chat with #{request.restaurant.name}", conversation_path(Conversation.between(current_chef, request.restaurant)) %>

    <% end %>

  </li>

  <% end %>
</ul>

<h1>Accepted Bookings</h1>

<ul>
  <% @bookings.each do |booking| %>
  <li>
    <p><%= booking.restaurant.name %> wants you for <%= booking.start_hours %> to <%= booking.end_hours %> on <%= booking.date %> and will pay $<%= booking.cost_pennies / 100 %><br>
      <%= link_to "Chat with #{booking.restaurant.name}", conversation_path(Conversation.between(booking.chef, booking.restaurant)) %>
    </p>
  </li>
  <% end %>
</ul>


