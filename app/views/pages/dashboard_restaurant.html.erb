<h1>restaurant dashboard</h1>


<h1>Pending Requests</h1>

<ul>

  <% @requests.each do |request| %>
    <%= link_to 'cancel request', cancel_all_request_path(request), method: :patch %>

    <% request.chefs.each do |chef| %>
      <li><%= chef.name %></li>
        <%= link_to 'cancel chef', cancel_chef_request_path(request, chef: chef), method: :patch %>
      </li>
    <% end %>

  <% end %>

</ul>

<h1>Accepted Bookings</h1>

<ul>
  <% @bookings.each do |booking| %>
  <li>
    <p><%= booking.id %> - <%= booking.chef.name %> wants you for <%= booking.shift %> and will pay <%= booking.cost_pennies %></p>
  </li>
  <% end %>
</ul>
