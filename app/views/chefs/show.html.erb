    </div>

    <!-- Day begins -->
    <div class="day-container">
      <span>Wed 5th</span>
      <div class="day">
        <div class="lunch"></div>
        <div class="dinner"></div>
      </div>
    </div>

    <!-- Day begins -->
    <div class="day-container">
      <span>Thu 6th</span>
      <div class="day">
        <div class="lunch"></div>
        <div class="dinner"></div>
      </div>
    </div>

    <!-- Day begins -->
    <div class="day-container">
      <span>Fri 7th</span>
      <div class="day">
        <div class="lunch"></div>
        <div class="dinner"></div>
      </div>
    </div>

    <!-- Day begins -->
    <div class="day-container">
      <span>Sat 8th</span>
      <div class="day">
